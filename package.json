{
  "name": "mall-agent",
  "entry": {
    "index": "./src/renderer/ide/index.js"
  },
  "private": true,
  "author": "bingjian.guo",
  "main": "main.js",
  "build": {
    "appId": "com.mall.agent",
    "asar": false,
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "language": 2052
    },
    "files": [
      "**/*"
    ]
  },
  "directories": {
    "output": "release"
  },
  "devDependencies": {
    "antd": "^3.2.3",
    "babel": "6.5.2",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.8",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-import": "^1.6.6",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-remove-strict-mode": "*",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-electron": "^0.37.8",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "babel-runtime": "^6.11.6",
    "classnames": "^2.2.5",
    "concurrently": "^3.1.0",
    "conventional-changelog": "^1.2.0",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^3.1.2",
    "css-loader": "^0.26.0",
    "cz-conventional-changelog": "^1.2.0",
    "del-cli": "^0.2.1",
    "devtron": "^1.4.0",
    "dva": "^2.x",
    "electron": "^1.8.3",
    "electron-builder": "19.48.3",
    "electron-debug": "^1.0.1",
    "electron-devtools-installer": "^2.0.1",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-formatter-pretty": "^1.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "2.0.0-rc.3",
    "file-loader": "^1.1.11",
    "ghooks": "^1.3.2",
    "less": "^2.7.3",
    "less-loader": "^4.1.0",
    "less-plugin-npm-import": "^2.1.0",
    "postcss": "^5.2.5",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.0",
    "postcss-nested": "^1.0.0",
    "postcss-plugin-px2rem": "^0.7.0",
    "react": "^16.2.0",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^16.2.0",
    "webpack": "^2.2.1",
    "webpack-livereload-plugin": "^0.10.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "pre-commit": [
    "lint"
  ],
  "scripts": {
    "start": "electron ./app/build/main",
    "lint": "eslint --ext .js,.jsx src",
    "dev": "webpack -w",
    "atool": "atool-build -w",
    "build": "del-cli -f ./app/build/ && cross-env NODE_ENV=\"production\" webpack",
    "changelog": "node ./changelog",
    "dev_old": "concurrently --prefix \"[{name}]\" --names \"webpack,electron\" -c \"bgBlue.bold,bgMagenta.bold\" --kill-others \"npm run web\" \"npm start\" ",
    "postinstall": "cd app && npm i --registry=https://registry.npm.taobao.org",
    "pack": "build --dir",
    "dist": "npm run build && build --mac",
    "electron-dist": "DEBUG=* build --mac",
    "clean": "del-cli -f ./app/build/",
    "predist:win32_bak": "move ./app/assets/node ./",
    "dist:win32": "npm run build && build --win --ia32"
  },
  "theme": {
    "primary-color": "#1D8FE1",
    "info-color": "#1D8FE1"
  },
  "dependencies": {
    "homedir": "^0.6.0",
    "request": "^2.83.0"
  }
}
